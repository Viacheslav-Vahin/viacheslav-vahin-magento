<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link" name="regular-customer-form-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Loyalty program</argument>
                    <argument name="path" xsi:type="string">regular_customer/request/form</argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceBlock name="top.links">
            <block class="Magento\Framework\View\Element\Html\Link" name="regular-customer-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Regular Customer</argument>
                    <argument name="path" xsi:type="string">regular-customer/requests/view</argument>
                    <argument name="sortOrder" xsi:type="number">110</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
