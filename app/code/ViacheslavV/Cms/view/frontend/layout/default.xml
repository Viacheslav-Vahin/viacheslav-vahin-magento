<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <container htmlTag="div" htmlClass="demo-store-message-wrapper" before="-">
                <block class="Magento\Cms\Block\Block"
                       name="demo.store.message"
                >
                    <arguments>
                        <argument name="block_id" xsi:type="string">demo_store_message</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
